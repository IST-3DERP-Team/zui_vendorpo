<core:FragmentDefinition
		xmlns="sap.m"
        xmlns:f="sap.ui.layout.form"
		xmlns:core="sap.ui.core"
        xmlns:uit="sap.ui.table"
        fragmentName="fragment-inforecordresult">
    <Dialog contentWidth="600px"
        contentHeight="285px"
        title="Info Record Result"
        showHeader="false"
        resizable="true"
        draggable="true">
        <endButton>
			<Button text="Close" press=".onInfoRecordClose"/>
		</endButton>
        <uit:Table id="infoRecordResultTab"
            rows="{/items}"
            selectionMode="None"
            visibleRowCount="{/rowCount}">
            <uit:columns>
                <uit:Column width="150px">
                    <Text text="{/ddtext/MATNO}" />
                    <uit:template>
                        <Text text="{MATNO}" wrapping="false" />
                    </uit:template>
                </uit:Column>                
                <uit:Column width="430px">
                    <Text text="{/ddtext/REMARKS}" />
                    <uit:template>
                        <Text text="{REMARKS}" wrapping="false" />
                    </uit:template>
                </uit:Column>
            </uit:columns>
        </uit:Table>    
    </Dialog>
</core:FragmentDefinition>
