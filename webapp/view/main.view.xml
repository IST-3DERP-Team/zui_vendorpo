<mvc:View controllerName="zuivendorpo.controller.main"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:c="zuivendorpo.control"
    xmlns:core="sap.ui.core"
    xmlns:uiL="sap.ui.layout"
    xmlns:uiT="sap.ui.table"
    xmlns:plugins="sap.ui.table.plugins"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:semantic="sap.m.semantic"
    xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
    xmlns:fb="sap.ui.comp.filterbar" 
    xmlns:sUIC="sap.suite.ui.commons"
    displayBlock="true"> 
    <Page id="page" title="{i18n>title}" showHeader="false">
        <content>
            
            <smartfilterbar:SmartFilterBar id="smartFilterBar" entitySet="ZVB_3DERP_VPO_FILTERS" search="onSearch" showClearOnFB="true" persistencyKey="3DERP_StylesPKey" filterContainerWidth="15rem">
                <smartfilterbar:controlConfiguration>
                    <smartfilterbar:ControlConfiguration key="SBU" groupId="_BASIC" label="{captionMsg>/SBU}" mandatory="mandatory" width="50px">
                        <smartfilterbar:customControl>
                            <ComboBox id="cboxSBU"
                                selectedKey="{ui>/sbu}"
                                change="onSBUChange"
                                items="{
                                    path: '/ZVB_3DERP_SBU_SH'
                                }">
                                <core:Item key="{SBU}" text="{SBU}" />
                            </ComboBox>                                  
                        </smartfilterbar:customControl>
                    </smartfilterbar:ControlConfiguration>
                </smartfilterbar:controlConfiguration>
                <smartfilterbar:controlConfiguration>
                    <smartfilterbar:ControlConfiguration key="PONO" label="{captionMsg>/PONO}" groupId="_BASIC" preventInitialDataFetchInValueHelpDialog="false" displayBehaviour ="idOnly" />
                </smartfilterbar:controlConfiguration>
                <smartfilterbar:controlConfiguration>
                    <smartfilterbar:ControlConfiguration id="filterVendor" label="{captionMsg>/VENDOR}" key="VENDOR" groupId="_BASIC" displayBehaviour ="idOnly"
                        preventInitialDataFetchInValueHelpDialog="false"> 
                    </smartfilterbar:ControlConfiguration>
                </smartfilterbar:controlConfiguration>
                <smartfilterbar:controlConfiguration>
                    <smartfilterbar:ControlConfiguration key="DOCTYPE" label="{captionMsg>/DOCTYP}" groupId="_BASIC" preventInitialDataFetchInValueHelpDialog="false" displayBehaviour ="idOnly"/>
                </smartfilterbar:controlConfiguration>
                <smartfilterbar:controlConfiguration>
                    <smartfilterbar:ControlConfiguration key="COMPANY" label="{captionMsg>/COMPANY}" groupId="_BASIC" preventInitialDataFetchInValueHelpDialog="false" displayBehaviour ="idOnly"/>
                </smartfilterbar:controlConfiguration>
                <smartfilterbar:controlConfiguration>
                    <smartfilterbar:ControlConfiguration key="SHIPTOPLANT" label="{captionMsg>/SHIPTOPLANT}" groupId="_BASIC" preventInitialDataFetchInValueHelpDialog="false" displayBehaviour ="idOnly"/>
                </smartfilterbar:controlConfiguration>
                <smartfilterbar:layoutData>
                    <FlexItemData growFactor="0"/>
                </smartfilterbar:layoutData>
            </smartfilterbar:SmartFilterBar>
            
            <VBox id="_IDGenVBox1" fitContainer="true" class="sidePadding vboxHeight vendorPO">
                <uiL:ResponsiveSplitter id="splitMain" defaultPane="default">
                    <uiL:PaneContainer orientation="Vertical">
                        <uiL:SplitPane requiredParentWidth="800">
                            <uiT:Table id="mainTab"
                                class="sapUiTinyMarginBottom sapUiTinyMarginBegin sapUiTinyMarginEnd"
                                visibleRowCountMode="Auto"
                                showColumnVisibilityMenu="true"
                                rows="{VPOHdr>/results}"
                                enableColumnFreeze="true"
                                selectionMode="MultiToggle"
                                selectionBehavior="RowSelector"
                                rowSelectionChange=".onSelectionChange"
                                firstVisibleRowChanged=".onFirstVisibleRowChanged"
                                cellClick=".onCellClick"
                                sort="onSort"
                                filter="onFilter"
                                columnFreeze=".onColumnUpdated"
                                columnMove=".onColumnUpdated"
                                columnResize=".onColumnUpdated"
                                columnSelect=".onColumnUpdated"
                                columnVisibility=".onColumnUpdated"
                                >
                                <uiT:extension>
                                    <Toolbar>
                                        <uiL:HorizontalLayout class="sapUiTinyMarginTop sapUiTinyMarginBegin sapUiTinyMarginEnd">
                                            <GenericTag text="{captionMsg>/UNRELEASEDPO}" design="StatusIconHidden" status="Warning" class="sapUiTinyMarginEnd" >
                                                <ObjectNumber emphasized="true" number="{counts>/unreleasedpo}" state="Information" id="unreleasedPO"/>
                                            </GenericTag>
                                            <GenericTag text="{captionMsg>/OPENLINEITEMS}" design="StatusIconHidden" status="Information" class="sapUiTinyMarginEnd">
                                                <ObjectNumber emphasized="true" number="{counts>/openlineitems}" state="Information" id="openLineItem"/>
                                            </GenericTag>
                                        </uiL:HorizontalLayout>
                                        <ToolbarSpacer/>
                                        <SearchField
                                            id="searchFieldMain"
                                            placeholder="{captionMsg>/SEARCH}"
                                            value=""
                                            search=".onSearchHeader"
                                            visible="false"
                                            width="15rem"/>
                                        <!-- <ToolbarSeparator /> -->
                                        <!-- <Button id="btnRelStrat" 
                                            visible="true"
                                            text="Release Strategy" />
                                        <MenuButton id="_IDGenMenuButton1" text="Header">
                                        <menu>
                                            <Menu id="_IDGenMenu1">
                                                <MenuItem id="_IDGenMenuItem_01_1" text="Conditions" press="onPress"/>
                                                <MenuItem id="_IDGenMenuItem_01_2" text="Text" />
                                                <MenuItem id="_IDGenMenuItem_01_3" text="Changes" />
                                            </Menu>
                                        </menu>                    
                                        </MenuButton>
                                        <MenuButton id="_IDGenMenuButton2" text="PO Actions">
                                        <menu>
                                            <Menu id="_IDGenMenu2">
                                                <MenuItem id="_IDGenMenuItem_02_1" text="Change Del. Date" press="onPress"/>
                                                <MenuItem id="_IDGenMenuItem_02_2" text="Change Vendor" />
                                                <MenuItem id="_IDGenMenuItem_02_3" text="Delete PO" />
                                                <MenuItem id="_IDGenMenuItem_02_4" text="Cancel PO" />
                                                <MenuItem id="_IDGenMenuItem_02_5" text="Split PO" />
                                            </Menu>
                                        </menu>                    
                                        </MenuButton> -->
                                        <MenuButton id="_IDGenMenuButton3" icon="sap-icon://add">
                                        <menu>
                                            <Menu id="_IDGenMenu3">
                                                <MenuItem id="_IDGenMenuItem_03_1" text="{captionMsg>/MANUAL}" press="onCreateManualPO"/>
                                                <MenuItem id="_IDGenMenuItem_03_2" text="{captionMsg>/ASSIGNPROCESS}" press="onNavToAnP"/>
                                            </Menu>
                                        </menu>                    
                                        </MenuButton>
                                        <Button id="btnEdit"
                                            icon="sap-icon://edit" 
                                            tooltip="{captionMsg>/EDIT}" 
                                            press=".onClickEdit"/>
                                        <Button id="btnRefreshMain" 
                                            icon="sap-icon://refresh"
                                            tooltip="{captionMsg>/REFRESH}"
                                            press=".onRefresh"
                                            visible="true" />
                                        <Button id="btnExportToExcel" 
                                            icon="sap-icon://excel-attachment"
                                            tooltip="{captionMsg>/EXPORTTOEXCEL}"
                                            press=".onExportToExcel"
                                            visible="true" />
                                        <Button icon="sap-icon://full-screen"
                                            press="onTableResize"
                                            tooltip="{captionMsg>/FULLSCREEN}"
                                            visible="true" />
                                        <!-- <Button id="btnSortMain" 
                                            icon="sap-icon://sort"
                                            press=".onColSort"
                                            visible="true" />
                                        <Button id="btnFilterMain" 
                                            icon="sap-icon://filter"
                                            press=".onColFilter"
                                            visible="true" /> -->
                                        <!-- <Button id="btnFullScreenMain" 
                                            icon="sap-icon://full-screen"
                                            press="onTableResize('Main','Max')"
                                            visible="true" />
                                        <Button id="btnExitFullScreenMain" 
                                            icon="sap-icon://exit-full-screen"
                                            press="onTableResize('Main','Min')"
                                            visible="false" />
                                        <Button id="btnColPropMain" 
                                            icon="sap-icon://table-column"
                                            press="onColumnProp"
                                            tooltip="Columns"
                                            visible="true" /> -->
                                        <Button id="btnTabLayout"
                                            icon="sap-icon://grid" 
                                            tooltip="{captionMsg>/SAVELAYOUT}" 
                                            press=".onSaveTableLayout('mainTab')"/>
                                    </Toolbar>
                                </uiT:extension>
                                <uiT:layoutData>
                                    <FlexItemData growFactor="1" baseSize="0%"/>
                                </uiT:layoutData>                        
                            </uiT:Table> 
                            <uiL:layoutData>
                                <uiL:SplitterLayoutData size="46%"/>
                            </uiL:layoutData>
                        </uiL:SplitPane>
                        <uiL:SplitPane  requiredParentWidth="800">
                            <IconTabBar id="itbDetail"
                                expanded="{device>/isNoPhone}" 
                                expandable="false" 
                                class="designSection2" 
                                headerBackgroundDesign="Solid" 
                                stretchContentHeight="true" 
                                applyContentPadding="false">
                                <items>
                                    <IconTabFilter id="detailsIconTab" text="{captionMsg>/DETAILS}">
                                        <uiT:Table id="detailsTab"
                                            class="sapUiTinyMarginBottom sapUiTinyMarginBegin sapUiTinyMarginEnd"
                                            visibleRowCountMode="Auto"
                                            showColumnVisibilityMenu="true"
                                            enableColumnFreeze="true"
                                            selectionMode="MultiToggle"
                                            cellClick=".onCellClick"
                                            rows="{VPODtls>/results}"
                                            sort="onSorted">
                                            <uiT:extension>
                                                <Toolbar>
                                                    <Text text="{captionMsg>/PONO}: {ui>/activePONo}" class="selHdrKeyFontStyle" />
                                                    <ToolbarSpacer/>
                                                    <Button id="btnRefreshDetails" 
                                                        icon="sap-icon://refresh"
                                                        press=".onRefresh"
                                                        tooltip="{captionMsg>/REFRESH}"
                                                        visible="true" />
                                                    <Button id="btnExportToExcelDetails" 
                                                        icon="sap-icon://excel-attachment"
                                                        tooltip="{captionMsg>/EXPORTTOEXCEL}"
                                                        press=".onExportToExcel"
                                                        visible="true" />
                                                    <Button icon="sap-icon://full-screen"
                                                        tooltip="{captionMsg>/FULLSCREEN}"
                                                        press="onTableResize"
                                                        visible="true" />
                                                    <Button id="btnColPropDetails" 
                                                        icon="sap-icon://table-column"
                                                        press=".onSaveTableLayout('detailsTab')"
                                                        tooltip="{captionMsg>/SAVELAYOUT}"
                                                        visible="true" />
                                                </Toolbar>
                                            </uiT:extension>
                                            <uiT:layoutData>
                                                <FlexItemData growFactor="1" baseSize="0%"/>
                                            </uiT:layoutData>                        
                                        </uiT:Table> 
                                    </IconTabFilter>
                                    <IconTabFilter id="delSchedIconTab" text="{captionMsg>/DELSCHED}">
                                        <uiT:Table id="delSchedTab"
                                            class="sapUiTinyMarginBottom sapUiTinyMarginBegin sapUiTinyMarginEnd"
                                            visibleRowCountMode="Auto"
                                            showColumnVisibilityMenu="true"
                                            rows="{VPODelSched>/results}"
                                            enableColumnFreeze="true"
                                            selectionMode="MultiToggle"
                                            cellClick=".onCellClick"
                                            sort="onSorted">
                                            <uiT:extension>
                                                <Toolbar>
                                                    <Text text="{captionMsg>/PONO}: {ui>/activePONo}," class="selHdrKeyFontStyle" />
                                                    <Text text="{captionMsg>/POITEM}: {ui>/activePOItem}" class="selHdrKeyFontStyle" />
                                                    <ToolbarSpacer/>
                                                    <Button id="btnRefresDelSched" 
                                                        icon="sap-icon://refresh"
                                                        press=".onRefresh"
                                                        tooltip="{captionMsg>/REFRESH}"
                                                        visible="true" />
                                                    <Button id="btnExportToExcelDelSched" 
                                                        icon="sap-icon://excel-attachment"
                                                        tooltip="{captionMsg>/EXPORTTOEXCEL}"
                                                        press=".onExportToExcel"
                                                        visible="true" />
                                                    <Button icon="sap-icon://full-screen"
                                                        tooltip="{captionMsg>/FULLSCREEN}"
                                                        press="onTableResize"
                                                        visible="true" />
                                                    <Button id="btnColPropDelSched" 
                                                        icon="sap-icon://table-column"
                                                        press=".onSaveTableLayout('delSchedTab')"
                                                        tooltip="{captionMsg>/SAVELAYOUT}"
                                                        visible="true" />
                                                </Toolbar>
                                            </uiT:extension>
                                            <uiT:layoutData>
                                                <FlexItemData growFactor="1" baseSize="0%"/>
                                            </uiT:layoutData>                        
                                        </uiT:Table> 
                                    </IconTabFilter>
                                    <IconTabFilter id="delInvIconTab" text="{captionMsg>/DELIVERY}/{captionMsg>/INVOICE}">
                                        <uiT:Table id="delInvTab"
                                            class="sapUiTinyMarginBottom sapUiTinyMarginBegin sapUiTinyMarginEnd"
                                            visibleRowCountMode="Auto"
                                            showColumnVisibilityMenu="true"
                                            rows="{VPODelInv>/results}"
                                            enableColumnFreeze="true"
                                            selectionMode="MultiToggle"
                                            cellClick=".onCellClick"
                                            sort="onSorted">
                                            <uiT:extension>
                                                <Toolbar>
                                                    <Text text="{captionMsg>/PONO}: {ui>/activePONo}," class="selHdrKeyFontStyle" />
                                                    <Text text="{captionMsg>/POITEM}: {ui>/activePOItem}" class="selHdrKeyFontStyle" />
                                                    <ToolbarSpacer/>
                                                    <Button id="btnRefresDelInv" 
                                                        icon="sap-icon://refresh"
                                                        press=".onRefresh"
                                                        tooltip="{captionMsg>/REFRESH}"
                                                        visible="true" />
                                                    <Button id="btnExportToExcelDelInv" 
                                                        icon="sap-icon://excel-attachment"
                                                        tooltip="{captionMsg>/EXPORTTOEXCEL}"
                                                        press=".onExportToExcel"
                                                        visible="true" />
                                                    <Button icon="sap-icon://full-screen"
                                                        tooltip="{captionMsg>/FULLSCREEN}"
                                                        press="onTableResize"
                                                        visible="true" />
                                                    <Button id="btnColPropDelInv" 
                                                        icon="sap-icon://table-column"
                                                        press=".onSaveTableLayout('delInvTab')"
                                                        tooltip="{captionMsg>/SAVELAYOUT}"
                                                        visible="true" />
                                                </Toolbar>
                                            </uiT:extension>
                                            <uiT:layoutData>
                                                <FlexItemData growFactor="1" baseSize="0%"/>
                                            </uiT:layoutData>                        
                                        </uiT:Table> 
                                    </IconTabFilter>
                                    <IconTabFilter id="procFlowIconTab" text="{captionMsg>/PROCFLOW}" visible="false">
                                        <Toolbar>
                                            <ToolbarSpacer/>
                                            <Button id="btnRefreshProcFlow" 
                                                icon="sap-icon://refresh"
                                                press=".onRefresh"
                                                tooltip="{captionMsg>/REFRESH}"
                                                visible="true" />
                                            <Button icon="sap-icon://full-screen"
                                                press="onTableResize"
                                                visible="true" />
                                        </Toolbar>
                                        <VBox height="100%" class="procFlowOverflow">
                                            <sUIC:ProcessFlow
                                                id="processFlowPO"
                                                scrollable="true"
                                                foldedCorners="true"
                                                wheelZoomable="false"
                                                nodePress="onNodePress"
                                                nodes="{processFlow>/nodes}"
                                                lanes="{processFlow>/lanes}">
                                                <sUIC:nodes>
                                                    <sUIC:ProcessFlowNode
                                                        laneId="{processFlow>lane}"
                                                        nodeId="{processFlow>id}"
                                                        title="{processFlow>title}"
                                                        titleAbbreviation="{processFlow>titleAbbreviation}"
                                                        children="{processFlow>children}"
                                                        state="{processFlow>state}"
                                                        stateText="{processFlow>stateText}"
                                                        texts="{processFlow>texts}"
                                                        highlighted="{processFlow>highlighted}"
                                                        focused="{processFlow>focused}" />
                                                </sUIC:nodes>
                                                <sUIC:lanes>
                                                    <sUIC:ProcessFlowLaneHeader
                                                        laneId="{processFlow>id}"
                                                        iconSrc="{processFlow>icon}"
                                                        text="{processFlow>label}"
                                                        position="{processFlow>position}" />
                                                </sUIC:lanes>
                                                <sUIC:layoutData>
                                                    <FlexItemData growFactor="1" baseSize="0%"/>
                                                </sUIC:layoutData>  
                                            </sUIC:ProcessFlow>
                                        </VBox>
                                    </IconTabFilter>
                                    <IconTabFilter id="poHistIconTab" text="{captionMsg>/POHIST}">
                                        <uiT:Table id="poHistTab"
                                            class="sapUiTinyMarginBottom sapUiTinyMarginBegin sapUiTinyMarginEnd"
                                            visibleRowCountMode="Auto"
                                            showColumnVisibilityMenu="true"
                                            enableColumnFreeze="true"
                                            selectionMode="MultiToggle"
                                            cellClick=".onCellClick"
                                            rows="{VPOPOHist>/results}"
                                            sort="onSorted">
                                            <uiT:extension>
                                                <Toolbar>
                                                    <Text text="{captionMsg>/PONO}: {ui>/activePONo}," class="selHdrKeyFontStyle" />
                                                    <Text text="{captionMsg>/POITEM}: {ui>/activePOItem}" class="selHdrKeyFontStyle" />
                                                    <ToolbarSpacer/>
                                                    <Button id="btnRefreshPOHistory" 
                                                        icon="sap-icon://refresh"
                                                        press=".onRefresh"
                                                        tooltip="{captionMsg>/REFRESH}"
                                                        visible="true" />
                                                    <Button id="btnExportToExcelPOHistory" 
                                                        icon="sap-icon://excel-attachment"
                                                        tooltip="{captionMsg>/EXPORTTOEXCEL}"
                                                        press=".onExportToExcel"
                                                        visible="true" />
                                                    <Button icon="sap-icon://full-screen"
                                                        tooltip="{captionMsg>/FULLSCREEN}"
                                                        press="onTableResize"
                                                        visible="true" />
                                                    <Button id="btnColPropPOHistory" 
                                                        icon="sap-icon://table-column"
                                                        press=".onSaveTableLayout('poHistTab')"
                                                        tooltip="{captionMsg>/SAVELAYOUT}"
                                                        visible="true" />
                                                </Toolbar>
                                            </uiT:extension>
                                            <uiT:layoutData>
                                                <FlexItemData growFactor="1" baseSize="0%"/>
                                            </uiT:layoutData>                        
                                        </uiT:Table> 
                                    </IconTabFilter>
                                    <IconTabFilter id="conditionsIconTab" text="{captionMsg>/CONDITIONS}">
                                        <uiT:Table id="conditionsTab"
                                            class="sapUiTinyMarginBottom sapUiTinyMarginBegin sapUiTinyMarginEnd"
                                            visibleRowCountMode="Auto"
                                            showColumnVisibilityMenu="true"
                                            enableColumnFreeze="true"
                                            selectionMode="MultiToggle"
                                            cellClick=".onCellClick"
                                            rows="{VPOCond>/results}"
                                            sort="onSorted">
                                            <uiT:extension>
                                                <Toolbar>
                                                    <Text text="{captionMsg>/CONDREC}: {ui>/activeCondRec}" class="selHdrKeyFontStyle" />
                                                    <ToolbarSpacer/>
                                                    <Button id="btnRefreshConditions" 
                                                        icon="sap-icon://refresh"
                                                        press=".onRefresh"
                                                        tooltip="{captionMsg>/REFRESH}"
                                                        visible="true" />
                                                    <Button id="btnExportToExcelConditions" 
                                                        icon="sap-icon://excel-attachment"
                                                        tooltip="{captionMsg>/EXPORTTOEXCEL}"
                                                        press=".onExportToExcel"
                                                        visible="true" />
                                                    <Button icon="sap-icon://full-screen"
                                                        tooltip="{captionMsg>/FULLSCREEN}"
                                                        press="onTableResize"
                                                        visible="true" />
                                                    <Button id="btnColPropConditions" 
                                                        icon="sap-icon://table-column"
                                                        press=".onSaveTableLayout('conditionsTab')"
                                                        tooltip="{captionMsg>/SAVELAYOUT}"
                                                        visible="true" />
                                                </Toolbar>
                                            </uiT:extension>
                                            <uiT:layoutData>
                                                <FlexItemData growFactor="1" baseSize="0%"/>
                                            </uiT:layoutData>                        
                                        </uiT:Table>
                                    </IconTabFilter>
                                </items>
                                <layoutData>
                                    <FlexItemData growFactor="1" baseSize="0%"/>
                                </layoutData>
                            </IconTabBar>
                            <uiL:layoutData>
                                <uiL:SplitterLayoutData size="54%"/>
                            </uiL:layoutData>
                        </uiL:SplitPane>
                    </uiL:PaneContainer>
                </uiL:ResponsiveSplitter>
            </VBox>
        </content>
    </Page>
</mvc:View>
