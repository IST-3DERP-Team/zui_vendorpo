<core:FragmentDefinition 
    xmlns:core="sap.ui.core"
    xmlns:uiT="sap.ui.table"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form" 
    displayBlock="false"> 
    <uiT:Table id="HdrDownloadHistTbl"
        class="sapUiTinyMarginBottom sapUiTinyMarginBegin sapUiTinyMarginEnd"
        visibleRowCountMode="Auto"
        showColumnVisibilityMenu="true"
        enableColumnFreeze="true"
        selectionMode="Single"
        selectionBehavior="Row"
        >
        <uiT:extension>
            <OverflowToolbar design="Transparent">
                <Text text="{ui>/poVendorVendName}" class="selHdrKeyFontStyle" />
                <ToolbarSpacer/>
                <Button id ="vpoBtnRefreshtDownloadHist" type="Ghost"  icon="sap-icon://refresh" text="{captionMsg>/REFRESH}" tooltip="{captionMsg>/REFRESH}" press=".onRefreshDownloadHist"/>
            </OverflowToolbar>
        </uiT:extension>
    </uiT:Table>
    
</core:FragmentDefinition>
