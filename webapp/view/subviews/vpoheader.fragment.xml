<core:FragmentDefinition 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:c="zuivendorpo.control"
    xmlns:core="sap.ui.core"
    xmlns:uiL="sap.ui.layout"
    xmlns:uiT="sap.ui.table"
    xmlns:plugins="sap.ui.table.plugins"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form" 
    xmlns:semantic="sap.m.semantic"
    xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
    xmlns:fb="sap.ui.comp.filterbar" 
    displayBlock="false"> 
    <IconTabBar
        id="vpoHeaderIconTab"
        headerMode="Inline"
        expanded="{device>/isNoPhone}"
        stretchContentHeight="true" 
        applyContentPadding="false"
        class="sapUiResponsivePadding" 
        expandable="false">
            <content>
                <OverflowToolbar id="_ovfToolBarIO" design="Transparent" >
                    <MenuButton id="vpoHdrMenuBtn" text="PO Actions">
                        <menu>
                            <Menu id="vpoHdrMenu">
                                <MenuItem id="_IDGenMenuItem_02_1" text="Change Del. Date" press="onPress"/>
                                <MenuItem id="_IDGenMenuItem_02_2" text="Change Vendor" />
                                <MenuItem id="_IDGenMenuItem_02_3" text="Delete PO" />
                                <MenuItem id="_IDGenMenuItem_02_4" text="Cancel PO" />
                                <MenuItem id="_IDGenMenuItem_02_5" text="Split PO" />
                            </Menu>
                        </menu>                    
                    </MenuButton>
                    <Button type="Ghost"  icon="sap-icon://edit" tooltip="Edit" press="onEditIO"/>
                    <Button type="Ghost"  icon="sap-icon://refresh" tooltip="Refresh" press="onEditIO"/>
                </OverflowToolbar>

                <MessageStrip id="HeaderMessageStrip" text="" showIcon="true" showCloseButton="true" class="sapUiMediumMarginBottom" type="Error" visible="false"/>

                <f:Form id="POHeaderDetailForm1" editable="false" class="sapUiNoContentPadding formHdr1">
                    <f:layout>
                        <f:ResponsiveGridLayout columnsXL="3" columnsL="3" columnsM="3" singleContainerFullSize="false" />
                    </f:layout>
                    <f:formContainers>
                        <f:FormContainer ariaLabelledBy="Grp1" class="sapUiNoContentPadding" >
                            <f:formElements>
                                <f:FormElement label="PO Number" visible="true">
                                    <f:fields>
                                        <Input id="f1PONo" value="{topHeaderData>/PONO}" editable="false" valueStateText="Required" 
                                            change="onHeaderChange" liveChange="onHeaderChange">
                                        </Input>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="PO Date" visible="true">
                                    <f:fields>
                                        <Input id="f1PODT" value="{topHeaderData>/PODT}" editable="false" valueStateText="Required" 
                                            change="onHeaderChange" liveChange="onHeaderChange"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="Doc. Type" visible="true">
                                    <f:fields>
                                        <Input id="f1DocTyp" value="{topHeaderData>/DOCTYPE}" editable="false" valueStateText="Required" 
                                            change="onHeaderChange" liveChange="onHeaderChange"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="Vendor" visible="true">
                                    <f:fields>
                                        <Input id="f1Vendor" value="{topHeaderData>/VENDOR}" editable="false" valueStateText="Required" 
                                            change="onHeaderChange" liveChange="onHeaderChange"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="Purch. Org" visible="true">
                                    <f:fields>
                                        <Input id="f1PurOrg" value="{topHeaderData>/PURCHORG}" editable="false" valueStateText="Required" 
                                            change="onHeaderChange" liveChange="onHeaderChange"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="Pur. Grp." visible="true">
                                    <f:fields>
                                        <Input id="f1PurGrp" value="{topHeaderData>/PURCHGRP}" editable="false" valueStateText="Required" 
                                            change="onHeaderChange" liveChange="onHeaderChange"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="Company" visible="true">
                                    <f:fields>
                                        <Input id="f1Company" value="{topHeaderData>/COMPANY}" editable="false" valueStateText="Required" 
                                            change="onHeaderChange" liveChange="onHeaderChange"/>
                                    </f:fields>
                                </f:FormElement>
                            </f:formElements>
                        </f:FormContainer>
                        <f:FormContainer ariaLabelledBy="Grp2">
                            <f:formElements>
                                <f:FormElement label="Purch. Plant" visible="true">
                                    <f:fields>
                                        <Input id="f1PurPlant" value="{topHeaderData>/PURCHPLANT}" editable="false" valueStateText="Required" 
                                            change="onHeaderChange" liveChange="onHeaderChange">
                                        </Input>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="Ship-to-Plant" visible="true">
                                    <f:fields>
                                        <Input id="f1ShipToPlant" value="{topHeaderData>/SHIPTOPLANT}" editable="false" valueStateText="Required" 
                                            change="onHeaderChange" liveChange="onHeaderChange"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="Currency" visible="true">
                                    <f:fields>
                                        <Input id="f1Currency" value="{topHeaderData>/CURRENCY}" editable="false" valueStateText="Required" 
                                            change="onHeaderChange" liveChange="onHeaderChange"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="Incoterms" visible="true">
                                    <f:fields>
                                        <Input id="f1Incoterms" value="{topHeaderData>/INCOTERMS}" editable="false" valueStateText="Required" 
                                            change="onHeaderChange" liveChange="onHeaderChange"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="Destination" visible="true">
                                    <f:fields>
                                        <Input id="f1Destination" value="{topHeaderData>/DEST}" editable="false" valueStateText="Required" 
                                            change="onHeaderChange" liveChange="onHeaderChange"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="Ship Mode" visible="true">
                                    <f:fields>
                                        <Input id="f1ShipMode" value="{topHeaderData>/SHIPMODE}" editable="false" valueStateText="Required" 
                                            change="onHeaderChange" liveChange="onHeaderChange"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="Release Status" visible="true">
                                    <f:fields>
                                        <Input id="f1RelStat" value="{topHeaderData>/RELSTAT}" editable="false" valueStateText="Required" 
                                            change="onHeaderChange" liveChange="onHeaderChange"/>
                                    </f:fields>
                                </f:FormElement>
                            </f:formElements>
                        </f:FormContainer>
                    </f:formContainers>
                </f:Form>

            </content>
    </IconTabBar>
</core:FragmentDefinition>
